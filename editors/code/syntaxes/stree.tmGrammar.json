{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",

    "scopeName": "source.stree",
    "patterns": [
        { "include": "#node_type" },
        { "include": "#node_range_index" },
        { "include": "#token_text" }
    ],
    "repository": {
        "node_type": {
            "match": "^\\s*([a-z_][a-z_0-9]*?) (at)",
            "captures": {
                "1": {
                    "name": "entity.name.function"
                },
				"2": {
					"name": "keyword"
				}
            }
        },
        "node_range_index": {
            "match": "\\d+",
            "name": "constant.numeric"
        },
        "token_text": {
            "match": "\".+\"",
            "name": "string"
        }
    },
    "fileTypes": ["stree"]
}
